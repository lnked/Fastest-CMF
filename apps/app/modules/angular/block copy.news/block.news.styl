@require '../_common/styles/global'

.sh-news
    display flex
    padding-top 205px
    padding-bottom 20px
    font-family Formular
    @media (min-width: $screen.large)
        padding-top 275px
    @media (max-width: $screen._medium)
        padding-top 175px
        outline 1px solid red
    @media (max-width: $screen.tablet)
        padding-top 95px
    
    &__filter
        position fixed
        @extend .sh__col
        @extend .sh__col--left
        line-height .94
        &[class*=app-animate--random]
            animation-delay .3s
        &.app-animate--slide-in-up
            animation-name: appEffectSlideInUp--news
        &.app-animate--ready
            animation-duration: .7s
        &:before
        &:after
            content ''
            display block
            width 100%
            height 1px
            background-color #151515
            margin-bottom 20px
        &:after
            position absolute
            left 0
            bottom 0
            display none
            width 100%
            margin-bottom 0
        a
            display flex
            align-items center
            font-size 48px
            font-weight 700
            letter-spacing -4px
            transition opacity .3s ease
            backface-visibility hidden
            padding-left 40px
            &:hover
                opacity .5
        &--active
            a
                opacity .5
                &:hover
                    opacity 1
